<% provide(:title, "form_field") %>
<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <h1></h1>
    <p></p>
    <%= form_with url: root_path do |f| %>
      <%= f.text_field :name, class: "hoge", size: 30 %><br>
      <%= f.text_area :name, class: "hoge", size: "30x10" %><br>
      <%= f.number_field :age, class: "hoge", min: 1, max: 5 %><br>
      <%= f.search_field type="search", class: "hoge" %><br>
      <%= f.email_field type="email", class: "hoge" %><br>
      <%= f.check_box :sex ,{}, "true", "false" %><br>
      <%#= collection_check_boxes :user_ids, User.all, :id, :name %>
      <%= f.radio_button :gender, "男" %>男 <%= f.radio_button :gender, "女" %>女<br>
      性別：<%= f.radio_button :gender, 0 %>男<%= f.radio_button :gender, 1, checked: true %>女<br>
      <%= f.select :job_id, [ ["プログラマン講師",1], ["家電メーカー", 2], ["主婦", 3 ] ,["保育士", 4], ["学生", 5], ["営業", 6] ], prompt: "職業を選択してください", class: "hoge", disabled: 2 %><br>
      <%#= f.collection_select(:job_id, @jobs, :id, :name ) %>
      <select name="user[job_id]" id="user_job_id">
      <option value="">職業を選択してください</option>
      <option value="1">プログラマン講師</option>
      <option value="2">家電メーカー</option>
      <option value="3">主婦</option>
      <option value="4">保育士</option>
      <option value="5">学生</option>
      <option value="6">営業</option>
      </select><br>
      <%#= form.label :image, for: “file-input”, class: “fa fa-file-picture-o” do %>
      <%#= form.file_field :image, id: “file-input”, style: "display: none;" %>
      <%= f.date_select :カラム名, {start_year: 1990} %><br>
      <%= f.date_select :カラム名, {start_year: 1990, end_year: 2100} %><br>
      <%= f.date_select :カラム名, default: { year: 2000, month: 1, day: 1 } %><br>
      <%= f.submit "送信" %><br>
      <%= f.label :name, "名前:" %>
      <%= f.text_field :name %>
    <% end %>
  </body>
</html>